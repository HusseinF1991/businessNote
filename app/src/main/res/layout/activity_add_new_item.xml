<?xml version="1.0" encoding="utf-8"?>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AddNewItemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <EditText
        android:id="@+id/etxtNewItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="اسم المنتج" />

    
    <EditText
        android:id="@+id/etxtNewItemSellPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="سعر البيع"
        android:inputType="number"
        android:gravity="center"/>
    
    <EditText
        android:id="@+id/etxtNewItemBoughtPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="سعر الشراء"
        android:gravity="center"
        android:inputType="number"/>

        <AutoCompleteTextView
            android:id="@+id/etxtNewItemSupplier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="المجهز"
            android:gravity="center"/>

        <EditText
            android:id="@+id/etxtNewItemNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ملاحظات"
            android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/picbItemImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="#ffffff"

            android:padding="1dp"
            android:scaleType="fitCenter"
            android:src="@drawable/gallry_btn" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="اختر صورة المنتج"
                android:gravity="center"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btnNewItemImg_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="كاميرا"
                android:textStyle="bold"/>
            
            <Button
                android:id="@+id/btnNewItemImg_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="استوديو"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp">

        <ImageView
            android:id="@+id/picbNewItemAttachment"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="#ffffff"
            android:padding="1dp"
            android:scaleType="fitCenter"
            android:src="@drawable/gallry_btn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="اختر الصورة المرفقة للمنتج"
                android:gravity="center"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btnNewItemAttachment_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="كاميرا"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnNewItemAttachment_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="استوديو"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnAddNewItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="أضافة"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/long_button"/>
</LinearLayout>
</ScrollView>