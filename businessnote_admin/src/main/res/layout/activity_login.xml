<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:background="@drawable/firstpage">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_LoginActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="@android:color/white">
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/loginicon_btn"
        />

    <EditText
        android:id="@+id/etxtUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="اسم المستخدم"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="23sp"/>

    <EditText
        android:id="@+id/etxtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="الرمز السري"
        android:inputType="textPassword"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="23sp"/>

    <CheckBox
        android:id="@+id/ckBoxKeepSignedIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تسجيل دائم"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:textSize="23sp"
        android:layoutDirection="rtl"
        android:layout_gravity="right"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center">


        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="تسجيل الدخول"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:textColor="#ffffff"
            android:background="@drawable/long_button"/>


        <Button
            android:id="@+id/btnForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="نسيت الرمز السري"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:background="@drawable/long_button"/>

    </LinearLayout>



</LinearLayout>